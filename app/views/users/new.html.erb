
<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |err| %>
      <li>
        <%= err %>
      </li>
    <% end %>
  </ul>
<% end %>

<div class="col-xs-2">
  <h3><%= button_to "Home", root_path, class: "btn btn-block btn-primary btn-xs", method: :get %></h3>
</div>
<div class="col-xs-5 col-xs-offset-2">
  <%= simple_form_for @user do |f| %>
    <div class="input">
      <%= f.input :username, placeholder: "Username", label: false %>
    </div>
    <div class="input">
      <%= f.input :email_address, placeholder: "Email", label: false %>
    </div>
    <div class="input">
      <%= f.input :password, placeholder: "Password", label: false %>
    </div>
    <div>
      <%= f.button :submit, class: "button btn-xs btn-primary" %>
    </div>
  <% end %>
</div>
