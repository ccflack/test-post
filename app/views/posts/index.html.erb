
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>
        Vote!
      </th>
      <th>
        Link
      </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="vert-align">
          <% if current_user %>
            <%= link_to upvote_post_path(post.id), class: "btn btn-xs btn-block", method: :post do %>
              <i class="glyphicon glyphicon-chevron-up"></i>
            <% end %>
          <% end %>
          <p class="text-center nopadding">
          <%= post.votes.count %>
          <p/>
          <% if current_user %>
            <%= link_to downvote_post_path(current_user.id, post.id), class: "btn btn-xs btn-block", method: :delete do %>
              <i class="glyphicon glyphicon-chevron-down"></i>
            <% end %>
          <% end %>
        </td>
        <td class="vert-align">
          <h3><%= link_to post.title, post.url %></h3>
          <h5>Submitted by: <%= link_to post.user.username, user_path(post) %></h5>
          <h6 class="text-right"><%= post.created_at.strftime('%b %e, %Y') %></h6>
          <h5 class='text-center'>Posted in: <%= post.category.title %></h3>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
