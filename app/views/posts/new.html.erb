<% if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |err| %>
      <li>
        <%= err %>
      </li>
    <% end %>
  </ul>
<% end %>

<div class="col-xs-2">
  <h3><%= button_to "Home", root_path, class: "btn btn-block btn-primary btn-xs", method: :get %></h3>
</div>
<div class="col-xs-8 col-xs-offset-1">
  <%= simple_form_for @post do |f| %>
    <div class="input">
      <%= f.input :title, placeholder: "Title", label: false %>
    </div>
    <div class="input">
      <%= f.input :url, placeholder: "Link address", label: false %>
    </div>
    <div class="input">
      <%= f.association :user, label_method: "#{:username}", placeholder: "Choose your name", label: false %>
    </div>
    <div>
      <%= f.button :submit, class: "button btn-xs btn-primary" %>
    </div>
  <% end %>
</div>
