<!DOCTYPE html>
<html>
  <head>
    <title>TestPost</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="jumbotron">
      <h1 class='text-center'>Test post, please ignore.</h1>
      <h5 class= 'text-center'>Page, like, 98,472,364 of the Internet. Probably.</h5>
    </div>
    <% if flash.any? %>
      <% flash.each do |key, message| %>
      <div class="alert alert-<%= key %>" role="alert">
        <p>
          <%= message %>
        </p>
      </div>
      <% end %>
    <% end %>
    <div class="container.fluid">
      <div class="col-xs-10">
        <%= yield %>
      </div>
      <div class="col-xs-2">
        <% if current_user %>
        <h3><%= button_to "Submit Post", :new_post, class: "btn btn-block btn-primary btn-xs", method: :get unless current_page?(:new_post) %></h3>
        <h3><%= button_to "Log Out", session_path(id: "any"), class: "btn btn-block btn-primary btn-xs", method: :delete %></h3>
        <% else %>
        <h3><%= button_to "Create Account", :new_user, class: "btn btn-block btn-primary btn-xs", method: :get unless current_page?(:new_user) %></h3>
        <h3><%= button_to "Log In", :new_session, class: "btn btn-block btn-primary btn-xs", method: :get unless current_page?(:new_session) %></h3>
        <% end %>
        <h3><%= link_to "Home", root_path, class: "btn btn-block btn-primary btn-xs", method: :get unless current_page?(:root) %></h3>
      </div>
    </div>
  </body>
</html>
